<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_height="match_parent">
    <include layout="@layout/app_bar_pages"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="0px"
        android:background="@color/colorLinha"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginTop="0px"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:text="SINCRONIZAÇÃO DE DADOS"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAccentBebe"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CONVIDADOS PRESENTES: "
                android:textColor="@color/black"
                android:textSize="13dp"/>
            <TextView
                android:id="@+id/txtconvidadospresentes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="right"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textSize="15dp"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/White"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CONVIDADOS AUSENTES: "
                android:textColor="@color/black"
                android:textSize="13dp" />
            <TextView
                android:id="@+id/txtconvidadosausentes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_marginRight="15dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="15dp"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/White"/>
        <Button
            android:id="@+id/btnSincronizarConvidados"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:drawablePadding="-80dp"
            android:layout_marginBottom="20dp"
            android:drawableRight="@drawable/ic_baseline_sync_24"
            android:paddingRight="50dp"
            android:background="@drawable/botao_redonda"
            android:text="SINCRONIZAR"/>
    </LinearLayout>
</LinearLayout>