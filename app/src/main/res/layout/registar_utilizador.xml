<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">
    <include layout="@layout/app_bar_pages"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="0px"
        android:background="@color/colorLinha"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginTop="0px"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:text="REGISTAR UTILIZADOR"/>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nome"
                android:paddingLeft="33dp"
                android:paddingBottom="10dp"
                android:paddingTop="15dp"
                android:inputType="text"
                android:background="@drawable/efeitocurvo"
                android:maxLines="1"/>


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingLeft="33dp"
                android:paddingBottom="10dp"
                android:paddingTop="15dp"
                android:hint="E-mail"
                android:background="@drawable/efeitocurvo"
                android:inputType="textEmailAddress"
                android:maxLines="1"/>


            <EditText
                android:id="@+id/telefone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Telefone"
                android:layout_marginTop="20dp"
                android:paddingLeft="33dp"
                android:paddingBottom="10dp"
                android:paddingTop="15dp"
                android:background="@drawable/efeitocurvo"
                android:inputType="phone"
                android:maxLines="1"/>

            <RadioGroup
                android:id="@+id/radioGrupo"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADMINISTRADOR"/>

                <RadioButton
                    android:id="@+id/protocolo"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROTOCOLO"/>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/btnRegistarUtilizador"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="-60dp"
            android:drawableLeft="@drawable/ic_create_black_24dp"
            android:paddingLeft="40dp"
            android:background="@drawable/botao_redonda"
            android:text="REGISTAR"/>
    </LinearLayout>
</LinearLayout>