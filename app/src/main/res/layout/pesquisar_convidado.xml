<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_height="match_parent">
    <include layout="@layout/app_bar_pages"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="0px"
        android:background="@color/colorLinha"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginTop="0px"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:text="PSESQUISAR CONVIDADO"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50px"
        android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editConvidado"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Informe o nome do convidado"
                android:gravity="center"
                android:shadowColor="@color/colorAccent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:paddingLeft="10dp"
                android:background="@drawable/efeitocurvo"
                android:inputType="text"/>
            <Button
                android:id="@+id/btnPesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:drawablePadding="-40dp"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:paddingLeft="20dp"
                android:background="@drawable/botao_redonda"
                android:text="PESQUISAR"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="100px"
            android:background="@color/colorLinha"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="50px"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:text="Ou leia o codigo QR do evento."/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/qrcode"/>

    </LinearLayout>
</LinearLayout>