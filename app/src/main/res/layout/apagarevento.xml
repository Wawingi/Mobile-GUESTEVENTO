<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_height="match_parent">
    <include layout="@layout/app_bar_pages"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="0px"
        android:background="@color/colorLinha"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginTop="0px"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:text="ELIMINAR EVENTO"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100px"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editIdEvento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Informe o id do evento"
            android:gravity="center"
            android:shadowColor="@color/colorAccent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:paddingLeft="10dp"
            android:background="@drawable/efeitocurvo"
            android:inputType="number"/>
        <Button
            android:id="@+id/btnApagarEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_marginTop="50px"
            android:drawablePadding="-60dp"
            android:drawableLeft="@drawable/ic_delete_forever_black_24dp"
            android:paddingLeft="40dp"
            android:background="@drawable/botao_redonda"
            android:text="ELIMINAR"/>
    </LinearLayout>
</LinearLayout>