<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/app_bar_pages"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="0px"
        android:background="@color/colorLinha"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginTop="0px"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:text="REGISTAR EVENTO"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150px"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnRegistarEventoWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:drawablePadding="-60dp"
            android:drawableLeft="@drawable/ic_cloud_download_24dp"
            android:paddingLeft="40dp"
            android:background="@drawable/botao_redonda"
            android:text="IMPORTAR WEB"/>
        <Button
            android:id="@+id/btnRegistarEventoFicheiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_marginTop="70px"
            android:drawablePadding="-60dp"
            android:drawableLeft="@drawable/ic_attach_file_24dp"
            android:paddingLeft="40dp"
            android:background="@drawable/botao_redonda"
            android:text="IMPORTAR FICHEIRO"/>
    </LinearLayout>
</LinearLayout>