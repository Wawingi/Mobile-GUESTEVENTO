<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_height="match_parent">
    <include layout="@layout/app_bar_pages"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="0px"
        android:background="@color/colorLinha"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginTop="0px"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:text="REGISTAR EVENTO"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50px"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/IdEvento"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="     Id evento    "
                android:gravity="center"
                android:shadowColor="@color/colorAccent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:paddingLeft="10dp"
                android:background="@drawable/efeitocurvo"
                android:inputType="number"/>
            <Button
                android:id="@+id/btnRegistarEventoWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/White"
                android:textSize="15dp"
                android:layout_marginLeft="15px"
                android:layout_marginRight="15px"
                android:drawablePadding="0dp"
                android:drawableLeft="@drawable/ic_cloud_download_24dp"
                android:paddingLeft="20dp"
                android:background="@drawable/botao_redonda"
                android:text="IMPORTAR WEB"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="40px"
            android:background="@color/colorLinha"/>
        <Button
            android:id="@+id/btnRegistarEventoFicheiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="15dp"
            android:layout_marginLeft="15px"
            android:layout_marginRight="15px"
            android:layout_marginTop="30px"
            android:drawablePadding="-60dp"
            android:drawableLeft="@drawable/ic_attach_file_24dp"
            android:paddingLeft="40dp"
            android:background="@drawable/botao_redonda"
            android:text="IMPORTAR FICHEIRO"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="30px"
            android:background="@color/colorLinha"/>

        <ImageView
            android:id="@+id/btnQRRegistar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/qrcode"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_height="match_parent"
            android:text="Leia o codigo QR do evento."/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="10px"
            android:background="@color/colorLinha"/>

    </LinearLayout>
</LinearLayout>