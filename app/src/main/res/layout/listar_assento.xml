<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_height="match_parent">
    <include layout="@layout/app_bar_pages"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="0px"
        android:background="@color/colorLinha"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_marginTop="0px"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:text="LISTAGEM DE ASSENTOS"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lstSemAssento"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorAccentBebe"
            android:background="@drawable/assento"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenhum assento encontrado."
            android:layout_marginTop="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lstview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>


</LinearLayout>